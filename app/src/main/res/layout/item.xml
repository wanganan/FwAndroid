<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tool="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:paddingBottom="10dp">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/iv_logo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2c2c2c"
        android:id="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        android:textSize="14sp"
        android:lines="2"
        android:lineSpacingMultiplier="1.2"
        android:ellipsize="end"
        android:paddingLeft="8dp"
        android:paddingRight="10dp"
        android:layout_marginTop="15dp"
        tool:text="案例的咖啡机拉升阶段"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:textSize="10sp"
        android:layout_marginTop="8dp"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:paddingRight="8dp"
        android:id="@+id/layout"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享赚"
        android:layout_marginRight="3dp"
        android:textSize="10sp"
        android:textColor="#ffffffff"
        />
        <TextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.5432"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textColor="#ffffffff"
            android:id="@+id/tv_brokerage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:visibility="gone"
            android:textSize="10sp"
            android:textColor="#ffffffff"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout"
        android:gravity="bottom"
        android:id="@+id/ll_qh"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:text="券后￥"

        android:textColor="#FF4B33"
        android:paddingLeft="8dp"
        android:id="@+id/qh"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_coupon_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF4B33"
        tool:text="123"

        android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9C9C9C"
            android:textSize="10sp"
            android:text="原价￥59.90"
            android:id="@+id/tv_m"
            android:layout_marginLeft="4dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/ll_qh"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"


            >
            <TextView
                android:layout_width="14dp"
                android:text="返"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:id="@+id/tv_profit"
                android:layout_marginRight="4dp"
                android:textColor="#ff1c1c1c"
                android:textSize="10sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dp"
            >
            <TextView
                android:layout_width="14dp"
                android:text="券"
                android:textColor="#ff2c2c2c"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:id="@+id/tv_coupon"
                android:layout_marginRight="4dp"
                android:textColor="#ff1c1c1c"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>