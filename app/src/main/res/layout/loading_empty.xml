<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:clickable="true"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:gravity="center"
    android:orientation="vertical">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/iv_emptyimg"
        android:visibility="gone"
        android:src="@drawable/ic_no_goods"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/tv_empty"
        android:textColor="#ff6c6c6c"
        android:textSize="14sp"/>

    <TextView
        android:layout_width="108dp"
        android:layout_height="28dp"
        android:id="@+id/tv_empty_btn"
        android:textColor="#ff2c2c2c"
        android:textSize="12sp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_hollow_gay_ellipse"
        android:text="去铜板商场逛逛"
        />
</LinearLayout>